@model PlanillaAllAccessGrupo01.AppWebMVC.Models.TipodeHorario

@{
	ViewData["Title"] = "Details";
}
<br />
<h1 class="text-center text-info"><i class="fas fa-eye"></i> Detalle del horario</h1>
<hr class="bg-info" style="height: 2px;" />


<div class="row justify-content-center mt-4">
    <div class="col-lg-8 col-md-10">
        <div class="card shadow-sm border-0">

            <div class="card-header text-black bg-white">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="form-control-plaintext text-center">@Model.NombreHorario</h3>
                </div>
            </div>


            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="text-center"><i class="fas fa-calendar-day me-2"></i>Día</th>
                                <th class="text-center"><i class="fas fa-clock me-2"></i>Horas</th>
                                <th class="text-center"><i class="fas fa-sign-in-alt me-2"></i>Entrada</th>
                                <th class="text-center"><i class="fas fa-sign-out-alt me-2"></i>Salida</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var horario in Model.Horarios)
                            {
                                <tr class="align-middle">
                                    <td class="text-center fw-semibold">@horario.Dias</td>
                                    <td class="text-center">@horario.HorasxDia</td>
                                    <td class="text-center text-success fw-bold">@horario.HorasEntrada.ToString("hh\\:mm")</td>
                                    <td class="text-center text-danger fw-bold">@horario.HorasSalida.ToString("hh\\:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>


            <div class="d-flex justify-content-center mt-4">
                <a asp-action="Index" class="btn btn-primary px-4">
                    <i class="bi bi-arrow-left"></i> Regresar
                </a>
                <br />
            </div>
            <br />
        </div>
    </div>
</div>



