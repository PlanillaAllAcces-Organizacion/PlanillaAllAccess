@model PlanillaAllAccessGrupo01.AppWebMVC.Models.TipodeHorario

@{
	ViewData["Title"] = "Details";
}
<br />
<h1 class="text-center text-info"><i class="fas fa-eye"></i> Detalle del horario</h1>
<hr class="bg-info" style="height: 2px;" />

<div class="row justify-content-center">
	<div class="cold-md-8">
		<div class="card shadow-sm">

			<div class="row">
				<div class="col-md-12">
					<h3 class="form-control-plaintext border-bottom text-center">@Model.NombreHorario</h3>
				</div>
			</div>


			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead class="table-dark">
						<tr>
							<th>Día</th>
							<th>Horas por Día</th>
							<th>Hora de Entrada</th>
							<th>Hora de Salida</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var horario in Model.Horarios)
						{
							<tr>
								<td>@horario.Dias</td>
								<td>@horario.HorasxDia</td>
								<td>@horario.HorasEntrada.ToString("hh\\:mm")</td>
								<td>@horario.HorasSalida.ToString("hh\\:mm")</td>
							</tr>
						}
					</tbody>
				</table>
			</div>

			<div class="d-flex justify-content-center mt-4">
				<a asp-action="Index" class="btn btn-primary px-4">
					<i class="bi bi-arrow-left"></i> Regresar
				</a>
			</div>
			<br />
		</div>
	</div>
</div>