@model PlanillaAllAccessGrupo01.AppWebMVC.Models.TipodeHorario

@{
	ViewData["Title"] = "Create";
}

<div class="row justify-content-center">

	<h1 class="display-4 text-success"><i class="fas fa-plus-circle"></i> Crear Horario</h1>
	<hr class="bg-success" style="height: 2px;" />

	<br />
	<br />
	<div class="col-md-6">
		<div class="card shadow-lg p-4">

		
			<form asp-action="Create">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="NombreHorario" class="control-label required"></label>
					<input asp-for="NombreHorario" class="form-control" />
					<span asp-validation-for="NombreHorario" class="text-danger"></span>
				</div>

				<div class="d-flex justify-content-between mt-4">
					<button type="submit" class="btn btn-success px-4">
						<i class="fas fa-save"></i> Guardar
					</button>
					<a asp-action="Index" class="btn btn-danger px-4"> Volver</a>
				</div>

			</form>
		</div>
	</div>
</div>


@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
}
