@model PlanillaAllAccessGrupo01.AppWebMVC.Models.TipoPlanilla

@{
    ViewData["Title"] = "Details";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<h1 class="text-center my-4">
    <i class="fas fa-info-circle text-primary"></i> Detalles del Tipo de Planilla
</h1>
<h4 class="text-center text-muted">Información completa</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg p-4">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.NombreTipo)</label>
                    <div class="form-control-plaintext border-bottom">@Html.DisplayFor(model => model.NombreTipo)</div>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">Estado</label>
                    <div class="form-control-plaintext border-bottom">
                        @(Model.Activo ? "Activo" : "Inactivo")
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.FechaCreacion)</label>
                    <div class="form-control-plaintext border-bottom">@Html.DisplayFor(model => model.FechaCreacion)</div>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.FechaModificacion)</label>
                    <div class="form-control-plaintext border-bottom">@Html.DisplayFor(model => model.FechaModificacion)</div>
                </div>
            </div>

            <div class="d-flex justify-content-center gap-4 mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning px-4">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <a asp-action="Index" class="btn btn-primary px-4">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>
