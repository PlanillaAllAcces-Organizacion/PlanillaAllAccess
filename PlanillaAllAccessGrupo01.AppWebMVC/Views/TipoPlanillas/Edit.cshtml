@model PlanillaAllAccessGrupo01.AppWebMVC.Models.TipoPlanilla

@{
    ViewData["Title"] = "Edit";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<h1 class="text-center"><i class="fas fa-edit text-primary"></i> Editar Tipo de Planilla</h1>
<h4 class="text-center text-muted">Detalles del Tipo de Planilla</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="NombreTipo" class="form-label fw-bold">Nombre del Tipo de Planilla</label>
                    <input asp-for="NombreTipo" class="form-control" placeholder="Ingrese el nombre del tipo de planilla" />
                    <span asp-validation-for="NombreTipo" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-danger px-4">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}