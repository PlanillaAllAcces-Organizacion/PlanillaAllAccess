@model PlanillaAllAccessGrupo01.AppWebMVC.Models.Vacacion

@{
    ViewData["Title"] = "Create";
}

<div class="card shadow-sm">

    <div class="card-header bg-dark text-white">
        <h4 class="card-title text-center mb-0">Asignar Vacación</h4>
    </div>

    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="EmpleadosId" class="form-label fw-bold"></label>
                        <select asp-for="EmpleadosId" asp-items="ViewBag.EmpleadosId" class="form-control" disabled></select>
                        <input type="hidden" asp-for="EmpleadosId" />
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="MesVacaciones" class="form-label fw-bold"></label>
                        <select asp-for="MesVacaciones" class="form-control">
                            <option value="Enero">Enero</option>
                            <option value="Febrero">Febrero</option>
                            <option value="Marzo">Marzo</option>
                            <option value="Abril">Abril</option>
                            <option value="Mayo">Mayo</option>
                            <option value="Junio">Junio</option>
                            <option value="Julio">Julio</option>
                            <option value="Agosto">Agosto</option>
                            <option value="Septiembre">Septiembre</option>
                            <option value="Octubre">Octubre</option>
                            <option value="Noviembre">Noviembre</option>
                            <option value="Diciembre">Diciembre</option>
                        </select>
                        <span asp-validation-for="MesVacaciones" class="text-danger small"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="AnnoVacacion" class="form-label fw-bold"></label>
                        <input asp-for="AnnoVacacion" class="form-control" />
                        <span asp-validation-for="AnnoVacacion" class="text-danger small"></span>
                    </div>
                </div>
            </div>


            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DiaInicio" class="form-label fw-bold"></label>
                        <input asp-for="DiaInicio" type="date" class="form-control" />
                        <span asp-validation-for="DiaInicio" class="text-danger small"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DiaFin" class="form-label fw-bold"></label>
                        <input asp-for="DiaFin" type="date" class="form-control" />
                        <span asp-validation-for="DiaFin" class="text-danger small"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Estado" class="form-label fw-bold"></label>
                        <select asp-for="Estado" class="form-control">
                            <option value="1">Asignada</option>
                            <option value="2">Finalizada</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger small"></span>
                    </div>
                </div>
            </div>


            <div class="row mb-3">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="VacacionPagada" class="form-label fw-bold"></label>
                        <select asp-for="VacacionPagada" name="vacacionPagada" id="vacacionPagada" class="form-control">
                            <option value="1">Sí</option>
                            <option value="2">No</option>
                        </select>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="PagoVacaciones" class="form-label fw-bold"></label>
                        <input asp-for="PagoVacaciones" class="form-control" />
                        <span asp-validation-for="PagoVacaciones" class="text-danger small"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="FechaPago" class="form-label fw-bold"></label>
                        <input asp-for="FechaPago" type="date" class="form-control" />
                        <span asp-validation-for="FechaPago" class="text-danger small"></span>
                    </div>
                </div>
            </div>


            <div class="form-group text-center mt-4">
                <button type="submit" class="btn btn-success btn-lg me-2">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <a asp-action="Index" asp-controller="Empleado" class="btn btn-secondary btn-lg">
                    <i class="bi bi-arrow-left"></i> Regresar
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function () {

            function actualizarInputs() {
            if ($("#vacacionPagada").val() == "1") {
                    $("#PagoVacaciones, #FechaPago").prop("disabled", false);
                } else {
                    $("#PagoVacaciones, #FechaPago").prop("disabled", true);
                }
            }

            actualizarInputs();

        $("#vacacionPagada").change(function () {
                actualizarInputs();
            });
        });
    </script>


}

