@model PlanillaAllAccessGrupo01.AppWebMVC.Models.Vacacion

@{
    ViewData["Title"] = "Editar Vacación";
}

<h1 class="text-center"><i class="fas fa-edit text-primary"></i> Editar Vacación</h1>
<h4 class="text-center text-muted">Detalles de la Vacación</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="EmpleadosId" class="form-label fw-bold"></label>
                    <select asp-for="EmpleadosId" class="form-control" asp-items="ViewBag.EmpleadosId" disabled></select>
                    <span asp-validation-for="EmpleadosId" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="MesVacaciones" class="form-label fw-bold"></label>
                        <input asp-for="MesVacaciones" class="form-control" placeholder="Ingrese el mes" />
                        <span asp-validation-for="MesVacaciones" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="AnnoVacacion" class="form-label fw-bold"></label>
                        <input asp-for="AnnoVacacion" class="form-control" placeholder="Ingrese el año" />
                        <span asp-validation-for="AnnoVacacion" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="DiaInicio" class="form-label fw-bold"></label>
                        <input asp-for="DiaInicio" type="date" class="form-control" />
                        <span asp-validation-for="DiaInicio" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="DiaFin" class="form-label fw-bold"></label>
                        <input asp-for="DiaFin" type="date" class="form-control" />
                        <span asp-validation-for="DiaFin" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Estado" class="form-label fw-bold"></label>
                    <select asp-for="Estado" class="form-control">
                        <option value="0">Seleccione un estado</option>
                        <option value="1">Asignada</option>
                        <option value="2">Finalizada</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-danger px-4">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
