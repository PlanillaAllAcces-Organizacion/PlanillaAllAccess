@model PlanillaAllAccessGrupo01.AppWebMVC.Models.Bono

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center"><i class="fas fa-edit text-primary"></i> Editar Bono</h1>
<h4 class="text-center text-muted">Detalles del Bono</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="NombreBono" class="form-label fw-bold"></label>
                    <input asp-for="NombreBono" class="form-control" placeholder="Ingrese el nombre del bono" />
                    <span asp-validation-for="NombreBono" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Valor" class="form-label fw-bold"></label>
                        <input asp-for="Valor" type="number" step="0.01" class="form-control" placeholder="Ingrese el valor del bono" />
                        <span asp-validation-for="Valor" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Estado" class="form-label fw-bold"></label>
                        <select asp-for="Estado" class="form-control">
                            <option value="0">Seleccione un estado</option>
                            <option value="1">Activo</option>
                            <option value="2">Inactivo</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Operacion" class="form-label fw-bold"></label>
                        <select asp-for="Operacion" class="form-control">
                            <option value="0">Seleccione una operación</option>
                            <option value="1">Operación Fija</option>
                            <option value="2">Operación No Fija</option>
                        </select>
                        <span asp-validation-for="Operacion" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Planilla" class="form-label fw-bold"></label>
                        <select asp-for="Planilla" class="form-control">
                            <option value="0">Seleccione una planilla</option>
                            <option value="1">Planilla Mensual</option>
                            <option value="2">Planilla Quincenal</option>
                        </select>
                        <span asp-validation-for="Planilla" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FechaValidacion" class="form-label fw-bold"></label>
                        <input asp-for="FechaValidacion" type="date" class="form-control" />
                        <span asp-validation-for="FechaValidacion" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="FechaExpiracion" class="form-label fw-bold"></label>
                        <input asp-for="FechaExpiracion" type="date" class="form-control" />
                        <span asp-validation-for="FechaExpiracion" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-danger px-4">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}