@model PlanillaAllAccessGrupo01.AppWebMVC.Models.Empleado

@{
	ViewData["Title"] = "Details";
}


<h1 class="text-center"><i class="fas fa-info-circle text-primary"></i> Detalles del Empleado</h1>
<h4 class="text-center text-muted">Información completa</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg p-4">

            <div class="row">
                <div class="col-md-12 mb-3">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Dui)</label>
                    <div class="form-control-plaintext border-bottom text-center">@Model.Dui</div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Nombre)</label>
                    <div class="form-control-plaintext border-bottom">@Model.Nombre</div>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Apellido)</label>
                    <div class="form-control-plaintext border-bottom">@Model.Apellido</div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Telefono)</label>
                    <div class="form-control-plaintext border-bottom">@Model.Telefono</div>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Correo)</label>
                    <div class="form-control-plaintext border-bottom">@Model.Correo</div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.SalarioBase)</label>
                    <div class="form-control-plaintext border-bottom">@Model.SalarioBase</div>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Estado)</label>
                    <div class="form-control-plaintext border-bottom">@(Model.Estado == 1 ? "Activo" : "Inactivo")</div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.FechaContraInicial)</label>
                    <div class="form-control-plaintext border-bottom">@Model.FechaContraInicial.ToString("dd/MM/yyyy")</div>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.FechaContraFinal)</label>
                    <div class="form-control-plaintext border-bottom">@Model.FechaContraFinal.ToString("dd/MM/yyyy")</div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.JefeInmediato)</label>
                    <div class="form-control-plaintext border-bottom">@Model.JefeInmediato?.Nombre</div>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.PuestoTrabajo)</label>
                    <div class="form-control-plaintext border-bottom">@Model.PuestoTrabajo?.NombrePuesto</div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.TipoDeHorario)</label>
                    <div class="form-control-plaintext border-bottom">@Model.TipoDeHorario?.NombreHorario</div>
                </div>

                <div class="col-md-6 mb-3">
                    <label class="form-label fw-bold">@Html.DisplayNameFor(model => model.Usuario)</label>
                    <div class="form-control-plaintext border-bottom">@Model.Usuario</div>
                </div>
            </div>


            <div class="d-flex justify-content-center mt-4">
                <a asp-action="Index" class="btn btn-primary px-4">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}