@model PlanillaAllAccessGrupo01.AppWebMVC.Models.Planilla

@{
    ViewData["Title"] = "Delete";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<h1 class="text-center"><i class="fas fa-trash-alt text-danger"></i> Eliminar Planilla</h1>
<h4 class="text-center text-muted">Confirmación de eliminación</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg p-4">
            <h3 class="text-center text-danger mb-4">¿Estás seguro de que deseas eliminar esta planilla?</h3>

            <dl class="row">
                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.NombrePlanilla)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.NombrePlanilla)</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.FechaInicio)</dt>
                <dd class="col-sm-8">@Model.FechaInicio.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.FechaFin)</dt>
                <dd class="col-sm-8">@Model.FechaFin.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Autorizacion)</dt>
                <dd class="col-sm-8">
                    @if (Model.Autorizacion == 1)
                    {
                        <span class="badge bg-success">Autorizada</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">No Autorizada</span>
                    }
                </dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.TotalPago)</dt>
                <dd class="col-sm-8">@Model.TotalPago/* .ToString("C") */</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.TipoPlanilla)</dt>
                <dd class="col-sm-8">@Model.TipoPlanilla?.NombreTipo</dd>
            </dl>

            <form asp-action="Delete" class="d-flex justify-content-between mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="fas fa-trash-alt"></i> Eliminar
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

