@model PlanillaAllAccessGrupo01.AppWebMVC.Models.Planilla

@{
    ViewData["Title"] = "Edit";
}
@* Link utilizado para la funcionalida dde los íconos de la vista*@
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<h1 class="text-center"><i class="fas fa-edit text-primary"></i> Editar Planilla</h1>
<h4 class="text-center text-muted">Detalles de la Planilla</h4>
<hr />

@*Contendrá un formulario para editar los registros donde podrá cambiar cada uno de los campos que el usuario requiera, cumpliendo con las validaciones*@
@*Se agregó un campo más de AUTORIZAR, en este se colocará la planilla como autorizada o no autorizada*@
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="NombrePlanilla" class="form-label fw-bold required"></label>
                    <input asp-for="NombrePlanilla" class="form-control" placeholder="Ingrese el nombre de la planilla" />
                    <span asp-validation-for="NombrePlanilla" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <input asp-for="TipoPlanillaId" class="form-control" readonly />
                        <select asp-for="TipoPlanillaId" class="form-control" asp-items="ViewBag.TipoPlanillaId"></select>
                        <span asp-validation-for="TipoPlanillaId" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Autorizacion" class="form-label fw-bold">Autorización</label>
                        <select name="autorizacion" class="form-select">
                            <option value="0">Seleccione...</option>
                            <option value="1">Autorizado</option>
                            <option value="2">No Autorizada</option>
                        </select>
                        <span asp-validation-for="Autorizacion" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FechaInicio" class="form-label fw-bold required"></label>
                        <input asp-for="FechaInicio" type="date" class="form-control" />
                        <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="FechaFin" class="form-label fw-bold required"></label>
                        <input asp-for="FechaFin" type="date" class="form-control" />
                        <span asp-validation-for="FechaFin" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="TotalPago" class="form-label fw-bold required"></label>
                    <input asp-for="TotalPago" type="number" step="0.01" class="form-control" readonly />
                    <span asp-validation-for="TotalPago" class="text-danger"></span>
                </div>
                @*Funcionalidad de botones para guardar el registro actualizado y para poder Volver a la pantalla principal*@
                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn btn-danger px-4">
                        <i class="fas fa-arrow-left"></i> Volver
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
