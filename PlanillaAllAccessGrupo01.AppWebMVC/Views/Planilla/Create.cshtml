@model PlanillaAllAccessGrupo01.AppWebMVC.Models.Planilla

@{
    ViewData["Title"] = "Create";
}


<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<div class="row justify-content-center">
    <h1 class="display-4 text-success"><i class="fas fa-plus-circle"></i> Crear Planilla</h1>
    <hr class="bg-success" style="height: 2px;" />

    <div class="col-md-8">
        <div class="card shadow-lg p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="row">
                    <div class="col-md-12 mb-3">
                        <label asp-for="NombrePlanilla" class="form-label fw-bold"></label>
                        <input asp-for="NombrePlanilla" class="form-control" placeholder="Ingrese el nombre de la planilla" />
                        <span asp-validation-for="NombrePlanilla" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="TipoPlanillaId" class="form-label fw-bold"></label>
                        <select asp-for="TipoPlanillaId" class="form-control" asp-items="ViewBag.TipoPlanillaId"></select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="TotalPago" class="form-label fw-bold"></label>
                        <input asp-for="TotalPago" type="number" step="0.01" class="form-control" placeholder="Ingrese el total a pagar" />
                        <span asp-validation-for="TotalPago" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="FechaInicio" class="form-label fw-bold"></label>
                        <input asp-for="FechaInicio" type="date" class="form-control" />
                        <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="FechaFin" class="form-label fw-bold"></label>
                        <input asp-for="FechaFin" type="date" class="form-control" />
                        <span asp-validation-for="FechaFin" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-danger px-4"> Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
