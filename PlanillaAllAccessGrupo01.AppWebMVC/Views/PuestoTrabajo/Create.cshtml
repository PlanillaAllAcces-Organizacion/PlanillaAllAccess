@model PlanillaAllAccessGrupo01.AppWebMVC.Models.PuestoTrabajo

@{
    ViewData["Title"] = "Crear Nuevo Puesto de Trabajo";
}

<h1 class="text-center">Crear Nuevo Puesto</h1>
<h4 class="text-center text-muted">Complete los detalles del puesto</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="NombrePuesto" class="form-label fw-bold required"></label>
                    <input asp-for="NombrePuesto" class="form-control" placeholder="Ej: Desarrollador Senior" />
                    <span asp-validation-for="NombrePuesto" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SalarioBase" class="form-label fw-bold required"></label>
                        <input asp-for="SalarioBase" class="form-control" type="number" step="0.01" placeholder="Ej: 1500.00" />
                        <span asp-validation-for="SalarioBase" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ValorxHora" class="form-label fw-bold required"></label>
                        <input asp-for="ValorxHora" class="form-control" type="number" step="0.01" placeholder="Ej: 12.50" />
                        <span asp-validation-for="ValorxHora" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="ValorExtra" class="form-label fw-bold required"></label>
                        <input asp-for="ValorExtra" class="form-control" type="number" step="0.01" placeholder="Ej: 18.75" />
                        <span asp-validation-for="ValorExtra" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Estado" class="form-label fw-bold required"></label>
                        <select asp-for="Estado" class="form-control" asp-items="ViewBag.Estados">
                            <option value="">Seleccione estado</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-plus-circle"></i> Crear
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Configuración para campos numéricos
            $('input[type="number"]').on('keydown', function(e) {
                // Permite: números, punto decimal, teclas de control
                if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110, 190]) !== -1 ||
                    (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
                    (e.keyCode >= 35 && e.keyCode <= 40)) {
                    return;
                }
                // Asegura que es un número
                if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
                    e.preventDefault();
                }
            });
        });
    </script>
}