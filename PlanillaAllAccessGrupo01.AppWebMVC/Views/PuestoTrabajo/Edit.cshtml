@model PlanillaAllAccessGrupo01.AppWebMVC.Models.PuestoTrabajo

@{
    ViewData["Title"] = "Editar Puesto de Trabajo";
}

<h1 class="text-center">Editar Puesto de Trabajo</h1>
<h4 class="text-center text-muted">Detalles del Puesto</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-lg p-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="NombrePuesto" class="form-label fw-bold"></label>
                    <input asp-for="NombrePuesto" class="form-control" placeholder="Ingrese el nombre del puesto" />
                    <span asp-validation-for="NombrePuesto" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SalarioBase" class="form-label fw-bold"></label>
                        <input asp-for="SalarioBase" class="form-control" type="number" placeholder="Ingrese el salario base" />
                        <span asp-validation-for="SalarioBase" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="ValorxHora" class="form-label fw-bold"></label>
                        <input asp-for="ValorxHora" class="form-control" type="number" placeholder="Ingrese el valor por hora" />
                        <span asp-validation-for="ValorxHora" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="ValorExtra" class="form-label fw-bold"></label>
                        <input asp-for="ValorExtra" class="form-control" type="number" placeholder="Ingrese el valor extra" />
                        <span asp-validation-for="ValorExtra" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Estado" class="form-label fw-bold"></label>
                        <select asp-for="Estado" class="form-control" asp-items="ViewBag.Estados">
                            <option value="">Seleccione un estado</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-danger px-4">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}