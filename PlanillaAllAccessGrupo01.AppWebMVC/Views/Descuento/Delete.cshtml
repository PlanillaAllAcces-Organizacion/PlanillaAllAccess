@model PlanillaAllAccessGrupo01.AppWebMVC.Models.Descuento

@{
    ViewData["Title"] = "Delete";
}

@* Vista que mostrará los datos de cada descuento*@
@*Esta vista solo permitirá la visualización de los datos y podrá eliminar el descuento*@

<h1 class="text-center"><i class="fas fa-trash-alt text-danger"></i> Eliminar Descuento</h1>
<h4 class="text-center text-muted">Confirmación de eliminación</h4>
<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow-lg p-4">
            <h3 class="text-center text-danger mb-4">¿Estás seguro de que deseas eliminar este descuento?</h3>

            <dl class="row">
                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Nombre)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Valor)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Valor)</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Estado)</dt>
                <dd class="col-sm-8">
                    @if (Model.Estado == 1)
                    {
                        <span class="badge bg-success">@Model.EstadoTexto</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">@Model.EstadoTexto</span>
                    }
                </dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.FechaValidacion)</dt>
                <dd class="col-sm-8">@Model.FechaValidacion?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.FechaExpiracion)</dt>
                <dd class="col-sm-8">@Model.FechaExpiracion?.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Operacion)</dt>
                <dd class="col-sm-8">@Model.OperacionTexto</dd>

                <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Planilla)</dt>
                <dd class="col-sm-8">@Model.PlanillaTexto</dd>
            </dl>

            @*Funcionalidad del botón Cancelar, que dirigirá a la pantalla principal Index de Descuentos, sin eliminar nada.*@
            ¨@*Funcionalidad del botón de Eliminar que eliminará el descuento seleccionado*@
            <form asp-action="Delete" class="d-flex justify-content-between mt-4">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger px-4">
                    <i class="fas fa-trash-alt"></i> Eliminar
                </button>
                <a asp-action="Index" class="btn btn-secondary px-4">
                    <i class="fas fa-times"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
